<!DOCTYPE html>
<html>
<head>
  <title><% if defined? @pagetitle then %><%= @pagetitle %> - <% end %>運命とは避けがたく時に儚いSNS</title>
  <%= jquery_include_tag :jquery %>
  <%= jquery_ui_include_tag :jquery %>
  <%= stylesheet_link_tag 'http://code.jquery.com/ui/1.11.0/themes/humanity/jquery-ui.css' %>
  <%= stylesheet_link_tag    'application' %>
  <%= javascript_include_tag 'application' %>

  <!-- Bootstrap -->
  <%= stylesheet_link_tag 'https://netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css' %>
  <!--[if lt IE 9]>
    <%= javascript_include_tag 'https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js' %>
    <%= javascript_include_tag 'https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js' %>
  <![endif]-->

  <%= csrf_meta_tags %>

  <%= yield :head %>
</head>
<body>

  <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
    <div class="container">
      <div class="nav navbar-nav navbar-left">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse"><span style="color: #999">Menu</span></button>
        <a class="navbar-brand" href="/"><img src='/favicon.ico' alt='儚' /></a>
      </div>
      <ul class='nav navbar-nav navbar-right'>
<% if current_user %>
        <li><a href='/profile'><%= current_user.provider.capitalize %>:<%= current_user.screen_name %></a></li>
        <li><%= link_to 'Logout', logout_path %></li>
<% else %>
  <li><button class="btn btn-default dropdown-toggle" type="button" id="LoginMenu" data-toggle="dropdown">Login</button>
    <ul class="dropdown-menu" role="menu" aria-labelledby="LoginMenu">
      <li><%= link_to 'with Twitter', '/auth/twitter' %></li>
      <li><%= link_to 'with Facebook', '/auth/facebook' %></li>
    </ul></li>
<% end %>
      </ul>
    </div>
  </div>

  <div class='container main-containts'>
    <%= yield %>
  </div>

  <!-- Bootstrap -->
  <%= javascript_include_tag 'https://netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js' %>
</body>
</html>
